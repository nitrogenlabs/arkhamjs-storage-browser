{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "pretty": false,
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5"
  },
  "exclude": [
    "**/*.test.*",
    "./docs",
    "./lib",
    "./node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "types": [
    "./src/lib/types",
    "react",
    "jest"
  ]
}